<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <OutDir>$(SolutionDir)$(Platform)\$(Configuration)\AppInstallerCLIE2ETests\</OutDir>
    <IsPackable>false</IsPackable>
    <Platforms>x64;x86</Platforms>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Msix.Utils" Version="2.0.3" />
    <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
    <PackageReference Include="Microsoft.Windows.CsWinRT" Version="1.6.4" />
    <PackageReference Include="nunit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.15.1" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.4.0" />
  </ItemGroup>

  <!-- CsWinRT -->
  <PropertyGroup>
    <CsWinRTWindowsMetadata>local</CsWinRTWindowsMetadata>
    <CsWinRTFilters>
        -include Microsoft.Management.Deployment
        -include Windows.Foundation
        -include Windows.System.ProcessorArchitecture
        -exclude Windows.Foundation.Diagnostics
    </CsWinRTFilters>
  </PropertyGroup>

  <PropertyGroup>
    <MicrosoftManagementDeployment>Microsoft.Management.Deployment</MicrosoftManagementDeployment>
    <MicrosoftManagementDeploymentInProc>$(MicrosoftManagementDeployment).InProc</MicrosoftManagementDeploymentInProc>
    <WindowsPackageManager>WindowsPackageManager</WindowsPackageManager>
    <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="TestData\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\doc\admx\DesktopAppInstaller.admx" Link="TestData\DesktopAppInstaller.admx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\IndexCreationTool\IndexCreationTool.csproj" />
    <ProjectReference Include="..\Microsoft.Management.Deployment.InProc\Microsoft.Management.Deployment.InProc.vcxproj" />
    <ProjectReference Include="..\Microsoft.Management.Deployment\Microsoft.Management.Deployment.vcxproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Test.runsettings">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
      <Copy SourceFiles="$(TargetDir)..\$(MicrosoftManagementDeploymentInProc)\$(MicrosoftManagementDeploymentInProc).dll" DestinationFiles="$(TargetDir)\$(MicrosoftManagementDeployment).dll" />
      <Copy SourceFiles="$(TargetDir)..\$(WindowsPackageManager)\$(WindowsPackageManager).dll" DestinationFiles="$(TargetDir)\$(WindowsPackageManager).dll" />
  </Target>

</Project>
